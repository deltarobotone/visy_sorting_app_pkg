<launch>
    <node type="one_ctrl_node.py" pkg="one_easy_protocol_pkg" name="one_ctrl_node" output="screen" respawn="true"/>

    <node type="neo_pixel_node.py" pkg="visy_neopixel_pkg" name="neo_pixel_node" output="screen" respawn="true"/>
    <node type="status_bar_node.py" pkg="visy_neopixel_pkg" name="status_bar_node" output="screen" respawn="true"/>
    <node type="light_ring_node.py" pkg="visy_neopixel_pkg" name="light_ring_node" output="screen" respawn="true"/>

    <node type="pick_and_place_node.py" pkg="visy_sorting_app_pkg" name="pick_and_place_node" output="screen" respawn="true"/>
    <node type="sorting_app_node.py" pkg="visy_sorting_app_pkg" name="sorting_app_node" output="screen" respawn="true"/>
    <node type="grasp_planner_node.py" pkg="visy_sorting_app_pkg" name="grasp_planner_node" output="screen" respawn="true"/>

    <node type="conveyor_detector_node" pkg="visy_detector_pkg" name="conveyor_detector_node" output="screen" respawn="true">
      <param name="image_transport" value="compressed" />
    </node>

    <node type="metal_chip_detector_node" pkg="visy_detector_pkg" name="metal_chip_detector_node" output="screen" respawn="true">
      <param name="image_transport" value="compressed" />
    </node>

    <node type="visy_user_interface" pkg="visy_user_interface_pkg" name="visy_user_interface" output="screen" respawn="true">
      <param name="image_transport" value="compressed" />
    </node>

    <arg name="enable_raw" default="false"/>
    <arg name="enable_imv" default="false"/>
    <arg name="camera_id" default="0"/>
    <arg name="camera_frame_id" default="raspicam"/>
    <arg name="camera_name" default="camerav2_410x308"/>

    <node type="raspicam_node" pkg="raspicam_node" name="raspicam_node" output="screen">
      <param name="private_topics" value="true"/>

      <param name="camera_frame_id" value="$(arg camera_frame_id)"/>
      <param name="enable_raw" value="$(arg enable_raw)"/>
      <param name="enable_imv" value="$(arg enable_imv)"/>
      <param name="camera_id" value="$(arg camera_id)"/>

      <param name="camera_info_url" value="package://raspicam_node/camera_info/camerav2_410x308.yaml"/>
      <param name="camera_name" value="$(arg camera_name)"/>
      <param name="width" value="410"/>
      <param name="height" value="308"/>

      <param name="framerate" value="30"/>
      <param name="exposure_mode" value="antishake"/>
      <param name="shutter_speed" value="0"/>
    </node>

</launch>
